<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="org.rotaract9210.d9210events.ContactUsActivity"
    android:background="@color/blue">

    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
        android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view">

        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etContact_Name"
                android:background="#ffffff"
                android:padding="10dp"
                android:textSize="15dp"
                android:singleLine="true"
                android:hint="John Doe" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:id="@+id/textView5"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etContact_Email"
                android:background="#ffffff"
                android:padding="10dp"
                android:textSize="15dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:hint="johndoe@domain.com" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MESSAGE"
                android:id="@+id/textView9"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingTop="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/etContact_Message"
                android:background="#ffffff"
                android:padding="10dp"
                android:textSize="15dp"
                android:inputType="textMultiLine"
                android:hint="Your App is..."
                android:gravity="top|left" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="SEND"
                android:id="@+id/btnContact_Send"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_responsive_bground_inverted"
                android:layout_marginTop="10dp"
                android:textColor="#000000" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
