<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_home"
    tools:context="org.rotaract9210.d9210events.HomeActivity"
    android:background="@mipmap/background"
    android:layout_centerVertical="false"
    android:layout_gravity="center_vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/imageView5"
                android:src="@mipmap/rotary_logo"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView6"
                android:src="@mipmap/slice36" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EVENTS"
                    android:id="@+id/textView8"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp" />

            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:text="RAS 2016"
                    android:id="@+id/tvHome_RAS_2016"
                    android:gravity="center_horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/yellow_button_response"
                    android:textColor="@color/white"
                    android:paddingTop="20dp"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:text="DISCON 2016"
                    android:id="@+id/tvHome_DISCON"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="70dp"
                    android:layout_alignTop="@+id/tvHome_RAS_2016"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/blue_button_bg_response"
                    android:textColor="@color/white"
                    android:paddingTop="20dp"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:text="RYLA SUMMIT"
                    android:id="@+id/tvHome_RYLA"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="140dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/yellow_button_response"
                    android:textColor="@color/white"
                    android:paddingTop="20dp"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:text="INDUCTIONS"
                    android:id="@+id/tvHome_Inductions"
                    android:gravity="center_horizontal"
                    android:layout_alignTop="@+id/tvHome_RAS_2016"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="210dp"
                    android:background="@drawable/blue_button_bg_response"
                    android:textColor="@color/white"
                    android:paddingTop="20dp"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:text="SOCIAL EVENTS"
                    android:id="@+id/tvHome_Social_Events"
                    android:gravity="center_horizontal"
                    android:layout_alignTop="@+id/tvHome_RAS_2016"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="280dp"
                    android:background="@drawable/yellow_button_response"
                    android:textColor="@color/white"
                    android:paddingTop="20dp"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:text="PROJECTS"
                    android:id="@+id/tvHome_Projects"
                    android:gravity="center_horizontal"
                    android:layout_alignTop="@+id/tvHome_RAS_2016"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="350dp"
                    android:background="@drawable/blue_button_bg_response"
                    android:textColor="@color/white"
                    android:paddingTop="20dp"
                    android:textSize="30dp" />
            </RelativeLayout>
        </ScrollView>


    </LinearLayout>

</RelativeLayout>
